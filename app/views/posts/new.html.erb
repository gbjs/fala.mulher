<%= form_for :post, url: posts_path do |f| %>

<p>
  <%= f.label :name %><br>
  <%= f.text_field :name %>
</p>
<p>
  <%= f.label :contact %><br>
  <%= f.text_area :contact %>
</p>
<p>
  <%= f.label :denouncement %><br>
  <%= f.text_area :denouncement %>
</p>
<p>
  <%= f.label :kind %><br>
  <%= f.text_field :kind %>
</p>
<p>
  <%= f.submit %>
</p>
<% end %>
<%= link_to 'Back', posts_path %>